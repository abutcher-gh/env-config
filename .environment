export GREP_OPTIONS='--color --exclude=*.svn* --exclude=tags --exclude *ssbackup --exclude *ssprerevert --exclude *cscope.*'
export DEVROOT=/home2/ajb/git
export SAVEHIST=3000
export HISTSIZE=3000
export HISTFILE=$HOME/.bash_history
export HISTIGNORE="[ \t]*"
[ -n "$ZSH_VERSION" ] && setopt HIST_IGNORE_SPACE
export APPEND_HISTORY=1
export EXTENDED_HISTORY=1
export PATH=$HOME/bin:$PATH

if [ -f ~/.environment.local ]; then . ~/.environment.local; fi

